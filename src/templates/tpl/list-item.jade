li.epoch-item-summary(data-ng-class="['type-'+Thing.type.toLowerCase(), Visible?'active':'']", data-ng-translude)

	a.button.text-left(data-ng-click="Visible=!Visible", title="{{Thing.id}}")
		span.label.radius.epoch-type-icon
			em(data-ng-class="'icon-'+Thing.type.toLowerCase()")
		span.epoch-item-count.label(data-ng-if="Thing.count") {{ Thing.count }}
		span.epoch-item-name {{ Thing.name }}

	dl.tabs.simple-outline
		dd(data-ng-repeat="tab in Tabs")
			a(title="{{ tab.name }}", data-ng-click="tab.toggle()")
				em.item-detail-tab(data-ng-class="['icon-{{ tab.name }}']")

	.tabs-content(data-ng-show="Visible")
		.content(data-ng-repeat="pane in Panes", data-item-summary-pane="{{pane}}", data-collection="{{ pane.data }}")
