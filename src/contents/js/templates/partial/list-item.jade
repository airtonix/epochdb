li.epoch-item-summary(data-ng-class="['type-'+ItemSummary.type.toLowerCase()]")

	a.button.text-left(title="{{ ItemSummary.type }}: [{{ ItemSummary.id }}] {{ ItemSummary.name }}", data-ng-href="#/item/{{ ItemSummary.id }}")
		span.label.radius.epoch-type-icon
			em(data-ng-class="'icon-' + ItemSummary.type.toLowerCase()")
		span.epoch-item-name(data-ng-bind="ItemSummary.name")
		span(data-ng-if="!ItemCount").epoch-open-icon.icon-right-open-outline.icon-2x.right
		span(data-ng-if="ItemCount").epoch-item-count.label.right {{ ItemCount }}
