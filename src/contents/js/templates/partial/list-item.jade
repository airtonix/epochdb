li.epoch-item-summary(data-ng-class="['type-'+item.type.toLowerCase(), isVisible?'active':'']", data-ng-click="isVisible=!isVisible")

	a.button.text-left(title="{{ item.id }}", data-ng-href="#/item/{{item.id}}")
		span.label.radius.epoch-type-icon
			em(data-ng-class="'icon-' + item.type.toLowerCase()")
		span.epoch-item-name(data-ng-bind="item.name")
		span(data-ng-if="!Count").epoch-open-icon.icon-right-open-outline.icon-2x.right
		span(data-ng-if="Count").epoch-item-count.label.right {{ Count }}
