{
  "output": "./build",
  "contents": "./src/contents/",
  "templates": "./src/templates",

  "ignore": [
    "*/test",
    "*/test/*",
    "**/test/",
    "**/test/*"
  ],

  "locals": {
    "baseUrl": "/dist/",
    "url": "http://airtonix.github.com/epochdb/",
    "name": "EpochDB",
    "owner": {
      "name": "Zenobius Jiricek",
      "homepage": "http://zenobi.us/"
    },
    "description": "dayz epoch item database"
  },

  "plugins": [
    "wintersmith-jade",
    "wintersmith-node-sass",
    "wintersmith-data-json"
  ],

  "require": {
    "_": "underscore",
    "moment": "moment",
    "typogr": "typogr"
  },

  "jade": {
    "pretty": true
  },

  "node-sass": {
    "includePaths": [],
    "minify": true
  },

  "markdown": {
    "smartLists": true,
    "smartypants": true
  }

}
